<div class="products-index-left-column">
	<div class="products-index-left-column-inner">
		<h1>Refine By...</h1>
		<div class="panel">
			<div class="panel-heading">Category</div>
				<form>
					
				</form>
			<div class="panel-heading">Concern</div>
			<div class="panel-heading">Brand</div>
			<div class="panel-heading">Ingredients</div>
			<div class="panel-heading">Price Range</div>
		</div>
	</div>
</div>

<div class="products-index-right-column">

		<% @products.each do |product| %>

			<a href="<%= products_show_path(product) %>">

				<div class="product-card">

					<div class="product-card-image-container">
						<img src="<%= product.image_url %>" alt="image of <%= product.image_alt %>" class="product-card-image-inner">
					</div>
					<div class="product-card-name"><%= product.name %></div>  
					<div class="product-card-price"><%= product.currency %> <%= product.price_string %></div>

				</div>

			</a>

		<% end %>

</div>
